<%- include('template/header.ejs') %>
    <%- include('template/navbar.ejs') %>
    <div class="container-fluid mt-3">
      <div class="row">
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-6">
              <img src="<%= berita.image %>" class="img-fluid img-thumbnail">
            </div>
            <div class="col-md-6">
              <h3><%= berita.title %></h3>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <p><%= berita.description %></p>
        </div>
      </div>
    </div>
    <div class="container mt-5">
        <div class="row">
          <% for(let news of berita.posts) { %>
          <div class="col-md-3 mb-2">
            <div class="card" style="width: 18rem;">
              <img src="<%= news.thumbnail %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= news.title %></h5>
                <p class="card-text"><%= news.description %></p>
                <a href="<%= news.link %>" class="btn btn-primary">Go somewhere</a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
    </div>
<%- include('template/footer.ejs') %>